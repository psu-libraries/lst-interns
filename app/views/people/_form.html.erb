<%= form_with model: person do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %><br>
    <% person.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
  </div>

  <div>
     Contact Number ex. 123-456-7890<br>
    <%= form.text_field :contact %><br>
    <% person.errors.full_messages_for(:contact).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <br>
  </div>

  <div>
    <%= form.label :department %><br>
    <%= form.text_area :department %>
    <% person.errors.full_messages_for(:department).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
